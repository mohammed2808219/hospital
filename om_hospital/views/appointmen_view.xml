<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hospital_list_appointmen" model="ir.ui.view">
        <field name="name">hospital.list.appointmen</field>
        <field name="model">hospital.appointmen</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="hospital_id" />
                <field name="note"/>
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="hospital_form_appointmen" model="ir.ui.view">
        <field name="name">hospital.form.appointmen</field>
        <field name="model">hospital.appointmen</field>
        <field name="arch" type="xml">
            <form string="informasi hospital">
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft" confirm="Are you sure that you need ?"/>
                    <button id="button_done" name="action_done" string="Mark As Done" type="object" class="btn-primary" states="confirm" confirm="Are you sure that you need ?"/>
                    <button id="button_draft" name="action_draft" string="Set To Draft" type="object" class="btn-primary" states="cancel" confirm="Are you sure that you need ?"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" type="object" states="draft,done,confirm" confirm="Are you sure that you need ?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="hospital_id" /> 
                            <field name="gender" readonly="1" force_save="1"/> 
                            <field name="age" />  
                        </group>
                        <group>
                            <field name="date_appointmen"></field>
                            <field name="date_checkup"></field>
                            <field name="note" />
                        </group>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hospital_appointmen_search" model="ir.ui.view">
        <field name="name">hospital.appointmen.search</field>
        <field name="model">hospital.appointmen</field>
        <field name="arch" type="xml">
            <search string="search coustom">
                <field name="name" />
                <field name="hospital_id" />
                <separator/>
                <group expand="1" name="group by" string="Group By">    
                    <filter name="hospital_id" string="hospital" context="{'group_by':'hospital_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hospital_appointmen" model="ir.actions.act_window">
        <field name="name">Appointmen</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointmen</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your first hospital!
            </p>
        </field>
    </record>

    <menuitem id="hospital_root_appointmen" parent="hospital_root_menu" name="Appointments" />
    <menuitem id="appointmen_menu" action="action_hospital_appointmen" parent="hospital_root_appointmen" name="Appointments"  />

</odoo>
