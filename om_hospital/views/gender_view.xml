<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_hospital_male" model="ir.actions.act_window">
        <field name="name">Hospital Male</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.manegement</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_gender': 'male', 'default_note': 'new description for male', 'hide_gender': 1}</field>
        <field name="domain">[('gender', '=', 'male')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your first Kids!
            </p>
        </field>
    </record>


    <menuitem id="hospital_profile_male" action="action_hospital_male" parent="hospital_sub_menu" name="Hospital Male" sequence="30"/>


    <record id="action_hospital_female" model="ir.actions.act_window">
        <field name="name">Hospital Female</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.manegement</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_gender': 'female', 'hide_gender': 1}</field>
        <field name="domain">[('gender', '=', 'female')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your first Kids!
            </p>
        </field>
    </record>


    <menuitem id="hospital_profile_female" action="action_hospital_female" parent="hospital_sub_menu" name="Hospital Female" sequence="40"/>

</odoo>
