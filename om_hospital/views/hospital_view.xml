<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="hospital_list_view" model="ir.ui.view">
        <field name="name">hospital.list.view</field>
        <field name="model">hospital.manegement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="responsible_id" />
                <field name="email" />
                <field name="phone" />
                <field name="note"/>
                <field name="gender" />
                <field name="state" />
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="hospital_view_kanban" model="ir.ui.view">
        <field name="name">hospital.view.kanban</field>
        <field name="model">hospital.manegement</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="email" />
                <field name="phone" />
                <field name="note"/>
                <field name="gender" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name: <field name="name" />
                                    </li>
                                    <li>
                                        Phone: <field name="phone" />
                                    </li>
                                    <li>
                                        Gender: <field name="gender" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hospital_form_view" model="ir.ui.view">
        <field name="name">hospital.form.view</field>
        <field name="model">hospital.manegement</field>
        <field name="arch" type="xml">
            <form string="informasi hospital">
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft" confirm="Are you sure that you need ?"/>
                    <button id="button_done" name="action_done" string="Mark As Done" type="object" class="btn-primary" states="confirm" confirm="Are you sure that you need ?"/>
                    <button id="button_draft" name="action_draft" string="Set To Draft" type="object" class="btn-primary" states="cancel" confirm="Are you sure that you need ?"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" type="object" states="draft,done,confirm" confirm="Are you sure that you need ?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="responsible_id" />
                            <field name="email" />
                            <field name="phone" />  
                        </group>
                        <group>
                            <field name="note" />
                            <field name="gender" invisible="context.get('hide_gender')"/>
                            <field name="age" />
                            <field name="appointmen_count" />
                            
                        </group>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hospital_view_search" model="ir.ui.view">
        <field name="name">hospital.view.search</field>
        <field name="model">hospital.manegement</field>
        <field name="arch" type="xml">
            <search string="search coustom">
                <field name="name" />
                <field name="note" />
                <separator/>
                <filter name="Male" string="Male" domain="[('gender', '=', 'male')]" />
                <filter name="Female" string="Female" domain="[('gender', '=', 'female')]" />
                <group expand="1" name="group by" string="Group By">    
                    <filter  name="filter_gender" string="Gender" context="{'group_by':'gender'}"/>
                    <filter name="filter_name" string="Name" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hospital_profile" model="ir.actions.act_window">
        <field name="name">hospital profile</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.manegement</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_filter_gender': 1, 'search_default_filter_name': 1, 'search_default_Male': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your first hospital!
            </p>
        </field>
    </record>

    <menuitem id="hospital_root_menu" name="hospital"/>
    <menuitem id="hospital_sub_menu" parent="hospital_root_menu" name="hospital sub"/>
    <menuitem id="hospital_profile_menu" action="action_hospital_profile" parent="hospital_sub_menu" name="hospital profile" sequence="10"/>
    

</odoo>
